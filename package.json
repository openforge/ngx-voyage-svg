{
  "name": "@openforge/ngx-voyage-svg",
  "version": "0.0.2",
  "description": "Angular library to create custom map-based Voyages with SVGs",
  "keywords": [
    "angular",
    "svg",
    "map",
    "voyage"
  ],
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng-packagr -p package.json",
    "test": "ng test",
    "precommit": "lint-staged",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prettier": "prettier --parser typescript --write \"**/*.ts\""
  },
  "repository": "github:openforge/ngx-voyage-svg",
  "author": "Khaled Shaaban",
  "bugs": {
    "url": "https://github.com/openforge/ngx-voyage-svg/issues"
  },
  "peerDependencies": {
    "@angular/core": "^5.0.0",
    "hammerjs": "^2.0.8",
    "rxjs": "^5.5.2",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "@angular/animations": "^5.2.9",
    "@angular/cli": "1.6.8",
    "@angular/common": "^5.2.9",
    "@angular/compiler": "^5.2.9",
    "@angular/compiler-cli": "^5.2.9",
    "@angular/core": "^5.2.9",
    "@angular/forms": "^5.2.9",
    "@angular/http": "^5.2.9",
    "@angular/language-service": "^5.2.9",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@angular/router": "^5.2.9",
    "@types/hammerjs": "^2.0.35",
    "codelyzer": "^4.2.1",
    "core-js": "^2.4.1",
    "hammerjs": "^2.0.8",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.1",
    "ng-packagr": "^2.2.0",
    "prettier": "^1.11.1",
    "rxjs": "^5.5.7",
    "tslint": "^5.9.1",
    "typescript": "~2.5.3",
    "zone.js": "^0.8.19"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "src/public_api.ts"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120,
    "tabWidth": 2
  }
}
